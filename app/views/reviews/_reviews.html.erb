<ul class = "media-list">
    <% reviews.each do |review| %>
        <% user = review.user %>
        <% book = review.book %>
        <li class = "media">
            <div class = "media-left">
                <%= image_tag book.image_url, :size => "55x75", :alt => "アイコン" %>
            </div>
            <div class = "media-body">
                <div>
                    タイトル: <%= book.title %><br>
                    評価:<%= review.rate %> <span class = "text-muted">posted at <%= review.created_at %></span>
                </div>
                <div>
                    <%= link_to "詳細レビューを読む", review_path(review) %> 
                </div>
            </div>
        </li>
    <% end %>
    <%= paginate reviews %>
</ul>
