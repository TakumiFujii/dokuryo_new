<div class = "text-center">
    <h1>レビュー編集</h1><Hr>
    <div class="a-divider a-divider-break a-spacing-none a-spacing-top-small"></div>
    <%= image_tag @book.image_url, :size => "100x100", :alt => "本画像" %><br><br>
    「<%= @book.title %>」
          
      
    <div class="a-divider a-divider-break a-spacing-none a-spacing-top-small"></div>
</div><br>

<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <%= form_for(@review) do |f|%>
            <%= f.hidden_field :book_id, :value => @book.id %>
            
            
            <div class = "form-group">
                <%= f.label :rate, "評価(五段階)"%>
                <%= f.select :rate, [[1], [2], [3], [4], [5]], class: "form-cotnrol"%>
            </div>
            
            <div class = "form-group">
                <%= f.label :content, "評価理由"%>
                <%= f.text_area :content, class: "form-control", rows: 10 %>
            </div>
            
            <%= f.submit "変更", class: "btn btn-primary btn-block"%>
        <% end %>
    </div>
</div>
