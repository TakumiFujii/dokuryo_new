<% if current_user.doneyet?(book) %>
    <%= form_tag(ownership_path(book.id), method: :delete) do %>
        <%= hidden_field_tag :book_id, book.id %>
        <%= hidden_field_tag :type, "Done" %>
        <%= submit_tag "読了解除", class: "btn btn-warning btn-block"%>
    <% end%>
<% else %>
    <%= form_tag(ownerships_path) do%>
        <%= hidden_field_tag :book_isbn, book.isbn%>
        <%= hidden_field_tag :type, "Done" %>
        <%= submit_tag "読了", class: "btn btn-primary btn-block"%>
    <% end %>
<% end %>