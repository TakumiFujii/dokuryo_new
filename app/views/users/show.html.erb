<div class = "row">
    <aside class = "col-xs-3">
        <div class = "panel panel-primary">
            <div class = "panel-heading">
                <h3 class = "panel-title"><%= @user.nickname %></h3>
            </div>
            <div class = "panel-body">
              <% unless @user.image? %>
                <%= image_tag("default_picture.jpg", :size => "200x200", :alt => "アイコン")%>
              <% else %>
                <%= image_tag @user.image.url, :size => "200x200", :alt => "アイコン", class: "media-object img-rounded img-responsive" %>
              <% end %>
            </div>
        </div>
    </aside>
    <div class = "col-xs-9">
        <ul class = "nav nav-tabs nav-justfied">
            <li class = "<%= "active" if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do%>気になる <span class = "badge"><%= @willread_count%></span><% end %></li>
            <li class = "<%= "active" if current_page?(finished_user_path(@user)) %>"><%= link_to finished_user_path(@user) do%>読了 <span class = "badge"><%= @done_count %></span><% end %></li>
            <li class = "<%= "active" if current_page?(reviews_user_path(@user)) %>"><%= link_to reviews_user_path(@user) do%>レビュー <span class = "badge"><%= @review_count%></span><% end %></li>
            
        </ul>
        <%= render "books/books", books: @books %>
    </div>
</div>
